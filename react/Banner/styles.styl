@require 'settings/breakpoints.styl'
@require 'tools/mixins'

.c-banner
    &-wrapper
        display flex
        align-items center
        min-height rem(56)
        padding 0 rem(16)

        +small-screen()
            padding 0

    &-icon
        width rem(32)
        height rem(32)
        margin-left rem(16)

        & > svg // force Icon to be 32x32px
            width rem(32)
            height rem(32)

        div // force Avatar/Circle to be 32x32px
            width rem(32)
            height rem(32)
            min-width rem(32)
            min-height rem(32)

    &-text
        padding rem(12) rem(16)

    &-buttons
        button
            margin 0
            min-width 3rem
