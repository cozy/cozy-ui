@require 'settings/palette'
@require 'settings/breakpoints'
@require 'settings/spaces'

.InfosCarrousel
    position relative


.InfosCarrousel-navigation
    position absolute
    display flex
    align-items center

    CtaButtonHeight=2.5rem
    height CtaButtonHeight
    bottom (spacing_values.m)
    right (spacing_values.m)

    box-sizing border-box

    +mobile()
        // The CTA Button heights should change soon
        CtaButtonHeight=2.5rem
        height CtaButtonHeight
        bottom  (spacing_values.s)
        right  (spacing_values.s)


.InfosCarrousel-separator
    border-left 1px solid var(--dividerColor)
    height rem(16)
    margin 0 (spacing_values.xs)
