@require '../../stylus/settings/palette'
@require '../../stylus/settings/z-index'

.select-control__input
    width 0
    height 0
    overflow hidden

.select-option
    display block
    padding .5rem
    border-left 4px solid transparent
    color charcoalGrey
    transition all .2s ease-out
    white-space normal /* otherwise the tick can be wrongly placed in Firefox */

    &:hover
        background-color paleGrey
        cursor pointer

.select-option--focused
    background-color paleGrey

.select-option--selected
    background-color paleGrey
    border-left-color dodgerBlue

.select-option__checkbox
    margin-right .5rem
    vertical-align top

.select-option--checkmark
    float right

.select__overlay
    background-color transparent

:export {
    focusedZIndex: $overlay-index + 1
}
