@require 'settings/breakpoints.styl'

.DialogCloseButton
    position absolute
    top 1.15rem
    right 1.15rem
    z-index var(--zIndex-modal) //needed for an iOS bug https://github.com/cozy/cozy-ui/pull/1790
    transform translateY(var(--flagship-top-height))
    +small-screen()
        top 0.25rem
        right 0.25rem

.DialogBackButton
    position absolute
    top 1.15rem
    left 1.15rem
    z-index var(--zIndex-modal) //needed for an iOS bug https://github.com/cozy/cozy-ui/pull/1790
    +small-screen()
        top 0.25rem
        left 0.25rem
