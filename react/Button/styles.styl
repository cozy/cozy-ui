@require '../../stylus/components/button'

.c-btn
    @extend $button

    &.c-btn--tiny
        @extend $button--tiny

    &.c-btn--small
        @extend $button--small

    &.c-btn--large
        @extend $button--large

    &.c-btn--full
        @extend $button--full

    &.c-btn--narrow
        @extend $button--narrow

    &.c-btn--round
        @extend $button--round

.c-btn--left
    @extend $button--left

.c-btn--center
    @extend $button--center

.c-btn--right
    @extend $button--right

.c-btn--regular
    @extend $button--regular

.c-btn--secondary
    @extend $button--secondary

.c-btn--danger
    @extend $button--danger

.c-btn--danger-outline
    @extend $button--danger-outline

.c-btn--ghost
    @extend $button--ghost

.c-btn--highlight
    @extend $button--highlight

.c-btn--alpha
    @extend $button--alpha

.c-btn--text
    @extend $button--text

.c-btn--action
    @extend $button--action

.c-btn--close
    @extend $button--close

.c-btn--subtle
    @extend $button-subtle

    &.c-btn--regular
        @extend $button-subtle--regular

    &.c-btn--secondary
        @extend $button-subtle--secondary

    &.c-btn--danger
        @extend $button-subtle--danger

    &.c-btn--highlight
        @extend $button-subtle--highlight

    &.c-btn--tiny
        @extend $button-subtle--tiny

    &.c-btn--small
        @extend $button-subtle--small

    &.c-btn--large
        @extend $button-subtle--large
