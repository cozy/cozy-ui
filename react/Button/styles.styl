@require '../../stylus/components/button'

.c-btn
    @extend $button

    &.c-btn--tiny
        @extend $button--tiny

    &.c-btn--small
        @extend $button--small

    &.c-btn--large
        @extend $button--large

    &.c-btn--full
        @extend $button--full

    &.c-btn--narrow
        @extend $button--narrow

.c-btn--regular
    @extend $button--regular

.c-btn--secondary
    @extend $button--secondary

.c-btn--danger
    @extend $button--danger

.c-btn--danger-outline
    @extend $button--danger-outline

.c-btn--highlight
    @extend $button--highlight

.c-btn--alpha
    @extend $button--alpha

.c-btn--action
    @extend $button--action

.c-btn--close
    @extend $button--close




