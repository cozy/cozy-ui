.container
  position relative
  box-sizing border-box
  display flex
  align-items center
  justify-content center
  height 32px
  width 32px
  z-index var(--zIndex-app)

.wrapper
  box-sizing border-box
  display inherit
  background-color var(--paperBackgroundColor)
  border 3px solid var(--paperBackgroundColor)
  border-radius 3px
  box-shadow var(--shadow1), 0px 0px 0px 0.5px rgba(29, 33, 42, 0.16)

  & > *
    max-width 26px
    max-height 26px

    &:not(img)
      width 26px
      height 26px

  &.stacked
    position relative
    max-width 29px
    max-height 29px

    &::after
      content ""
      position absolute
      width 100%
      height 100%
      z-index var(--zIndex-below)
      top: -6px
      left: 0
      background-color var(--paperBackgroundColor)
      border 3px solid var(--paperBackgroundColor)
      border-radius 3px
      box-shadow var(--shadow1), 0px 0px 0px 0.5px rgba(29, 33, 42, 0.16)

    & > *
      max-width 23px
      max-height 23px

      &:not(img)
        width 23px
        height 23px
