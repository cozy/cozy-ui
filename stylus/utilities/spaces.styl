/*------------------------------------*\
  Space utilities
\*------------------------------------*/

// @stylint off
types = {
    p: padding,
    m: margin
}
sizes = {
    '0': 0,
    half: 0.5rem,
    '1': 1rem,
    '1-half': 1.5rem,
    '2': 2rem,
    '2-half': 2.5rem,
    '3': 3rem
}
directions = {
    '': all,
    t: top,
    b: bottom,
    l: left,
    r: right
}
for kType, vType in types
    for kSize, vSize in sizes
        for kDir, vDir in directions
            if vDir != all
                ${kType}{kDir}-{kSize}
                    {vType}-{vDir}: vSize
            else
                ${kType}-{kSize}
                    {vType}: vSize
// @stylint on
