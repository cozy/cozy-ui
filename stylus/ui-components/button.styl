
@import '../ui-base/icons'

/*------------------------------------*\
  Buttons of any kind
\*------------------------------------*/

/**
 * 1. `font-size` calls the font-size function in ui-components/fonts.styl
      and replaces px value by an em value. Don't be scared by this. :)
 */

$button
    box-sizing       border-box
    display          inline-block
    margin           0 .25em
    border           1px solid white
    border-radius    2px
    min-height       em(40px, 14px)
    padding          em(13px, 14px) em(15px, 14px) em(11px, 14px)
    background       transparent
    vertical-align   top
    text-align       center
    color            white
    font-size        14px /* [1] */
    line-height      1
    text-transform   uppercase
    text-decoration  none
    cursor           pointer

    &[disabled]
    &[aria-disabled=true]
        opacity  .5
        cursor   not-allowed

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        background-color  science-blue

    &[aria-busy=true]
        &::after
            @extend  $icon-spinner-white


$button--regular
    border-color      dodger-blue
    background-color  dodger-blue
    color             white

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        border-color      science-blue
        background-color  science-blue

    &[aria-busy=true]
        &::after
            @extend  $icon-spinner-white

$button--secondary
    background-color  white
    color             black
    border            1px solid silver

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        background-color  silver

    &[aria-busy=true]
        &::after
            @extend  $icon-spinner-blue

$button--danger
    border-color      pomegranate
    background-color  pomegranate
    color             white

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        border-color      monza
        background-color  monza

    &[aria-busy=true]
        &::after
            @extend  $icon-spinner-white

$button--danger-outline
    background-color  white
    color             pomegranate
    border            1px solid your-pink

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        background-color  your-pink

    &[aria-busy=true]
        &::after
            @extend  $icon-spinner-red

$button--highlight
    border-color      emerald
    background-color  emerald
    color             white

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        border-color      malachite
        background-color  malachite

    &[aria-busy=true]
        &::after
            @extend  $icon-spinner-white

$button--share
    padding-left         em(44px, 16px)
    background-image     embedurl('../assets/icons/ui/icon-share-grey08.svg')
    background-position  em(17px, 16px) center
    background-repeat    no-repeat

$button--send
    padding-left         em(44px, 16px)
    background-image     embedurl('../assets/icons/ui/icon-paperplane.svg')
    background-position  em(17px, 16px) center
    background-repeat    no-repeat

$button--download
    padding-left         em(44px, 16px)
    background-image     embedurl('../assets/icons/ui/icon-download.svg')
    background-position  em(17px, 16px) center
    background-repeat    no-repeat

$button--upload
    padding-left         em(44px, 16px)
    background-image     embedurl('../assets/icons/ui/icon-upload.svg')
    background-position  em(17px, 16px) center
    background-repeat    no-repeat

    &[disabled]
    &[aria-disabled=true]
        input
            cursor not-allowed

    input
        cursor pointer

$link--upload
    background-image     embedurl('../assets/icons/ui/icon-upload-grey08.svg')
    background-position  em(16px) center
    background-repeat    no-repeat

$button--delete
    padding-left         em(44px, 16px)
    background-image     embedurl('../assets/icons/ui/icon-delete.svg')
    background-position  em(17px, 16px) center
    background-repeat    no-repeat

    input
        cursor pointer

$link--delete
    background-image     embedurl('../assets/icons/ui/icon-delete-grey08.svg')
    background-position  em(16px) center
    background-repeat    no-repeat

$button--more
    width                em(46px)
    background-color     transparent
    background-image     embedurl('../assets/icons/ui/icon-dots.svg')
    background-position  center center
    background-repeat    no-repeat

$extra
    width       em(46px)
    border      0

$button--extra
    @extend $extra
    background  embedurl('../assets/icons/ui/icon-dots.svg') center center no-repeat
    opacity     .5

$button--extra-white
    @extend $extra
    background-image  embedurl('../assets/icons/ui/icon-dots-white.svg')

$button--close
    border               0
    width                em(46px)
    background-image     embedurl('../assets/icons/ui/icon-cross.svg')
    background-position  center center
    background-repeat    no-repeat

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        background-color     transparent


/*------------------------------------*\
  Alert's specific buttons
\*------------------------------------*/
$button-alert
    margin       .5rem 0 0
    border       0
    height       auto
    padding      .5rem 1rem
    font-weight  bold

$button-alert--error
    @extend $button-alert
    color   pomegranate

    &:active
    &:hover
    &:focus
        color  darken(pomegranate, 25%)

$button-alert--info
    @extend           $button-alert
    background-color  cool-grey
    color             white

    &:active
    &:hover
    &:focus
        color  darken(white, 10%)

$button-alert--success
    @extend $button-alert
    color   emerald

    &:active
    &:hover
    &:focus
        color darken(emerald, 25%)

/*------------------------------------*\
  Special buttons
\*------------------------------------*/
$button-client
    @extend $button
    @extend $button--secondary
    display           flex
    justify-content   center
    align-items       center
    height            auto
    padding-left      em(16px, 13px)
    padding-right     em(16px, 13px)
    background-color  transparent
    text-align        left
    font-size         13px
    font-weight       bold
    line-height       1.3
    color             slate-grey

    &:before
        content           ''
        flex              0 0 em(32px, 13px)
        height            em(32px, 13px)
        margin-right      em(12px, 13px)
        background        embedurl('../assets/icons/ui/icon-device-laptop.svg') 0 0 / contain no-repeat

    span
        flex  0 1 auto

$button-client-mobile
    @extend $button-client
    justify-content  flex-start
    background-color dodger-blue
    border           0
    border-radius    0
    padding          .5em 3em .5em 1em
    font-size        16px
    font-weight      normal
    color            white
    text-decoration  none
    text-transform   none

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        background-color dodger-blue

    &:before
        flex                0 0 em(44px)
        height              em(44px)
        border-radius       .5em
        border              .3em solid white
        background          white embedurl('../assets/icons/ui/icon-cozy.svg') 0 0 / contain no-repeat
