@import '../ui-base/palette'

$tabs-base
    .coz-tab-list
        border-bottom  1px solid grey-09

    .coz-tab
        display        inline-block
        padding        .625rem 1rem
        text-transform uppercase
        font-size      .8em
        cursor         pointer
        color          grey-11

        &:hover
            text-decoration none

    .coz-tab--active
        border-bottom 2px solid dodger-blue
        color         dodger-blue

    .coz-tab-panel
        padding-top 1.25rem
