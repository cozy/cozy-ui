@import '../ui-base/z-index'

/*------------------------------------*\
  Modals
  ======

  This file contains all needs for modals
\*------------------------------------*/

$modals
    modal-width = em(480px)

    .coz-overlay
        z-index     $modal-index
        position    fixed
        top         0
        left        0
        height      100%
        width       100%
        background  rgba(grey-08, .5)
        visibility  visible
        transition  opacity .3s, visibility 0s ease-out

        &.coz-overlay--hidden
            opacity     0
            visibility  hidden
            transition  opacity .3s 0s, visibility 0s ease-in .3s


    .coz-modal-wrapper
        position          fixed
        top               0
        left              0
        box-sizing        border-box
        width             100vw
        height            100vh
        overflow-y        scroll
        display           flex
        padding           (16/basefont)em

    .coz-modal
        position          relative
        margin            auto
        border-radius     em(8px)
        max-width         90%
        height            auto
        // Padding is set by inner element,
        // to be able to get horizontal separators.
        padding           1.5em 0
        background-color  white
        color             grey-08

        // The content of the modal should manage its
        // overflow settings as overflowing here may
        // hide the border-radius
        overflow          hidden
        .coz-modal-content
            padding 0 1.5em

        .coz-modal-section
            border-top 1px solid grey-09

        .coz-modal-title
            margin       .33em 0 1em
            // font is 1.5em
            padding      0 1em
            font-weight  bold

        .coz-btn-modal-close
            position         absolute
            top              1.3em
            right            1em
            margin           0
            padding          0
            background-size  2em
            background-color transparent
            cursor           pointer

        .coz-modal-buttons
            top-spaced  2em
            text-align  right

            button
                right-spaced  0
                left-spaced   10px
                font-size     .9em

        &.coz-modal--hidden
            top                         -25%
            opacity                     0
            transition-timing-function  ease-in


    @media (max-width modal-width)
        .coz-modal
            max-width   modal-width
            width       100%
