$modals
    modal-width = em(480px)
    .coz-modal
        z-index 100

    .coz-overlay
        position   absolute
        top        0
        left       0
        height     100%
        width      100%
        background rgba(grey-08, .5)
        visibility visible
        transition opacity .3s, visibility 0s ease-out

        &.coz-overlay--hidden
            opacity    0
            visibility hidden
            transition opacity .3s 0s, visibility 0s ease-in .3s


    .coz-modal
        position         fixed
        top              50%
        left             50%
        display          block
        box-sizing       border-box
        min-width        modal-width
        height           auto
        padding          1em 1.5em
        border-radius    em(8px)
        background-color white
        color            grey-08
        transform        translateX(-50%) translateY(-50%)

        .coz-modal-title
            bottom-spaced(1.8em)
            font-weight bold

        .coz-modal-close
            position        absolute
            top             2em
            right           1.8em
            background-size 22px
            cursor          pointer

        &.coz-modal--hidden
            top                        -25%
            opacity                    0
            transition-timing-function ease-in


    @media all and (min-width modal-width)
        .coz-modal
            max-width   modal-width
            width       100%
