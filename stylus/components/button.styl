  Alert's specific buttons
\*------------------------------------*/
/*
 Alert's buttons

 Buttons that look like links, with icons

 Markup:
 <div class="u-p-1">
     <button class="c-btn--alert {{modifier_class}} u-m-1">Click me, I'm a button!</button>
     <a hre="#" class="c-btn--alert {{modifier_class}} u-m-1">Click me, I'm a link!</a>
 </div>

 .c-btn-alert--error - Error button
 .c-btn-alert--info - Information button
 .c-btn-alert--success - Success button

 Weight: 10

 Styleguide Components.buttons.alert
*/
$button-alert // deprecated
.c-btn-alert
    margin       .5rem 0 0
    border       0
    height       auto
    padding      .5rem 1rem
    background-color transparent
    font-weight  bold
    font-size 1em

$button-alert--error // deprecated
.c-btn-alert--error
    @extend .c-btn-alert
    color   pomegranate

    &:active
    &:hover
    &:focus
        color  darken(pomegranate, 25%)

$button-alert--info // deprecated
.c-btn-alert--info
    @extend           .c-btn-alert
    background-color  cool-grey
    color             white

    &:active
    &:hover
    &:focus
        color  darken(white, 10%)

$button-alert--success // deprecated
.c-btn-alert--success
    @extend .c-btn-alert
    color   emerald

    &:active
    &:hover
    &:focus
        color darken(emerald, 25%)

/*------------------------------------*\
  Special buttons
\*------------------------------------*/
/*
 Special buttons

 Special link that look like buttons (<a> only)

 Markup:
 <div class="u-p-1" style="background-color: darkgrey; width: 50%;">
     <a hre="#" class="{{modifier_class}} u-mb-1">Click me, I'm a link!</a>
 </div>

 .c-btn-client - Button to download Cozy client app
 .c-btn-client-mobile - Button to download Cozy client app on mobile

 Weight: 20

 Styleguide Components.buttons.special
*/
$button-client // deprecated
.c-btn-client
    @extend .c-btn
    @extend .c-btn--secondary
    display           flex
    justify-content   center
    align-items       center
    height            auto
    margin            0
    padding-left      em(16px, 13px)
    padding-right     em(16px, 13px)
    background-color  transparent
    text-align        left
    font-size         13px
    font-weight       bold
    line-height       1.3
    color             slate-grey

    &:before
        content           ''
        flex              0 0 em(32px, 13px)
        height            em(32px, 13px)
        margin-right      em(12px, 13px)
        background        embedurl('../assets/icons/ui/icon-device-laptop.svg') 0 0 / contain no-repeat

    span
        flex  0 1 auto

$button-client-mobile // deprecated
.c-btn-client-mobile
    @extend .c-btn-client
    display          flex
    justify-content  flex-start
    background-color dodger-blue
    border           0
    border-radius    0
    padding          .5em 3em .5em 1em
    font-size        16px
    font-weight      normal
    color            white
    text-decoration  none
    text-transform   none

    &:active
    &:not([disabled]):not([aria-disabled=true]):hover
    &:focus
        background-color dodger-blue

    &:before
        flex                0 0 em(44px)
        height              em(44px)
        border-radius       .5em
        border              .3em solid white
        background          white embedurl('../assets/icons/ui/icon-cozy.svg') 0 0 / contain no-repeat
