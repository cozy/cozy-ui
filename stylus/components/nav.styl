@require '../settings/breakpoints'
@require '../settings/z-index'

/*------------------------------------*\
  Navigation
\*------------------------------------*/

$nav
    margin     1.5rem 0
    padding    0
    list-style none

    +medium-screen()
        display          flex
        justify-content  space-around
        margin           .3125rem 0 .25rem
        padding-right    0


$nav-item
    position        relative
    z-index         $app-index
    height          3rem

    &:hover::before
        content        ''
        position       absolute
        z-index        $below-index
        border-radius  0 3px 3px 0
        top 0
        left 0
        right 1rem
        bottom 0
        background     silver

    +medium-screen()
        margin 0 .75rem
        height        auto
        display       block
        flex          0 0 2.5rem
        padding-right 0
        &:hover::before
            content  none

    // Prevent double tap on tablets
    @media not all and (pointer: fine)
        &:hover::before
            content none

$nav-item-icon
    display inline-block
    margin-right 1rem
    color coolGrey

    +medium-screen()
        display block
        font-size 1.5rem
        margin-right 0
        text-align center

$nav-item-text
    +medium-screen()
        display block
        text-align center
        white-space nowrap

$nav-link
    display              flex
    padding-left         1.5rem
    padding-right        1rem
    line-height          1.5
    text-decoration      none
    color                slateGrey
    height               100%
    align-items          center
    flex                 1
    background-repeat    no-repeat
    background-position  1.5rem center

    &:visited
        color  slateGrey

    &:hover
        color  charcoalGrey

    &.active // deprecated
    &.is-active
        box-shadow   inset 4px 0 0 0 dodgerBlue
        font-weight  bold

        .c-nav-icon
            color dodgerBlue

    +medium-screen()
        display              block
        height               auto
        padding              1.8125rem 0 0
        text-align           center
        color                slateGrey
        font-size            10px
        line-height          1
        background-position  center top
        background-size      1.5rem

        &.active // deprecated
        &.is-active
        &:hover
            box-shadow   none
            font-weight  normal
            color        charcoalGrey

    // Prevent double tap on tablets
    @media not all and (pointer: fine)
        &:hover
            color slateGrey
