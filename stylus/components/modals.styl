@require '../settings/z-index'

/*------------------------------------*\
  Modals
  ======

  This file contains all needs for modals
\*------------------------------------*/

$modals
    modal-width = em(480px)

    .coz-overlay
        z-index     $modal-index
        position    fixed
        top         0
        left        0
        height      100%
        width       100%
        background  rgba(charcoal-grey, .5)
        visibility  visible
        transition  opacity .3s, visibility 0s ease-out

        &.coz-overlay--hidden
            opacity     0
            visibility  hidden
            transition  opacity .3s 0s, visibility 0s ease-in .3s


    .coz-modal-wrapper
        position          fixed
        top               0
        left              0
        display           flex
        flex-direction    row
        box-sizing        border-box
        width             100vw
        height            100vh
        overflow-y        scroll
        padding           (16/basefont)em

    .coz-modal
        position          relative
        margin            5vh auto auto
        border-radius     em(8px)
        max-width         90%
        min-width         modal-width
        height            auto
        background-color  white
        color             charcoal-grey

        .coz-modal-content:first-child
        .coz-btn-modal-close + .coz-modal-content
            padding-top    1.5em

        .coz-modal-content:last-child
            padding-bottom    1.5em

        .coz-modal-content
            padding 0 1.5em

        .coz-modal-section
            border-top 1px solid silver

        .coz-modal-content.coz-modal-title
            margin       0 0 1em
            // font is 1.5em
            padding      1em 3em 0 1em
            font-weight  bold

        .coz-btn-modal-close
            position         absolute
            top              1.3em
            right            1em
            margin           0
            padding          0
            background-size  2em
            background-color transparent
            cursor           pointer

        .coz-modal-buttons
            margin-top  2em
            text-align  right

            button
                margin-right  0
                margin-left   em(10px)
                font-size     .9em

        &.coz-modal--hidden
            top                         -25%
            opacity                     0
            transition-timing-function  ease-in

    .coz-modal--fullbleed
        overflow hidden

    @media (max-width (modal-width + 2em))
        .coz-modal
            margin      auto
            max-width   modal-width
            min-width   auto
            width       100%
