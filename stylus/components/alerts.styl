@require '../settings/z-index'
@require '../components/button'
@require '../tools/mixins'
/*
 * NOTIFICATIONS
 * =============
 *
 * This file contains all needs for alerts
 */

alert-width = rem(640)

$alert
    position fixed
    z-index $alert-index-mobile
    right 0
    bottom rem(48)
    left 0
    color var(--white)
    opacity 1
    transition transform .2s ease-out, opacity .2s ease-out
    cursor default
    pointer-events none

    @media all and (min-width alert-width)
        z-index $alert-index
        top rem(16)
        bottom auto
        text-align center

$alert--modal
    z-index $alert-index
    bottom 0

$alert-wrapper
    display inline-flex
    flex-wrap nowrap
    align-items center
    justify-content center
    box-sizing border-box
    width 100%
    box-shadow 0 rem(6) rem(18) 0 rgba(50, 54, 63, .23)
    background-color var(--emerald)
    padding rem(13 16)
    pointer-events auto

    p
        margin 0
        line-height 1.5

    p + button
        margin-left rem(24)

    @media all and (min-width alert-width)
        width auto
        max-width alert-width
        padding rem(16 24)
        border-radius rem(10)
        text-align left

$alert--hidden
    transform translateY(rem(80))
    opacity 0
    transition-timing-function ease-out

    @media all and (min-width alert-width)
        transform translateY(rem(-80))

$alert-title
    font-weight bold

$alert--error
    background-color var(--pomegranate)

$alert--success
    background-color var(--emerald)

$alert--info
    background-color var(--slateGrey)
