/*!
 * FORMS
 * =====
 *
 * This file contains all needs for forms, inputs, labels...
 */

@import '../ui-components/button'

checkbox-size = 20px

$form
    .coz-form
        position relative
        margin   1em 0 .5em

        // Managing input width with flex
        display         flex
        flex-direction  column

    label
        display        block
        text-transform uppercase
        color          grey-11
        font-size      .9em
        padding        .55em 0
        margin-top     1em

    .coz-error-label
        display none
        color   pomegranate

    .coz-errors
        color pomegranate

    a, a:visited
        color               dodger-blue
        text-decoration     none


$form-button
    @extends    $buttons
    .coz-form-controls
        width      70%
        padding    0 15%
        display    flex
        margin-top 1.5em

        button
            width       100%
            margin      .4em


$form-text
    input[type=text]
    input[type=password]
        display       inline-block
        padding       .9em .75em .75em .9em
        border-radius 4px
        box-sizing    border-box
        border        1px solid grey-03
        background    grey-10
        color         black
        &::placeholder
            color     grey-06
            font-size 1em
        &:focus
            border     1px solid dodger-blue
            background none
        &:hover
            border 1px solid grey-11
        &.error
            border     1px solid pomegranate
            background none


$form-select
    select
        display       inline-block
        padding       .75em .75em .9em
        border-radius 4px
        box-sizing    border-box
        border        1px solid grey-03
        background    grey-10
        color         black
        appearance          none
        background-image    url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='16px' height='16px'><polyline points='14.764,4.966 8.053,11.677 1.342,4.966'/></svg>")
        background-position right 8px center
        background-repeat   no-repeat
        &::-ms-expand
            display none
        &::placeholder
            color     grey-07
            font-size 1.05em
        &:focus
            border     1px solid dodger-blue
            background none
        &:hover
            border 1px solid grey-06
        &.error
            border     1px solid pomegranate
            background none


$form-checkbox
    input[type=radio]
    input[type=checkbox]
        hide()

    label
        position    relative
        left-padded checkbox-size * 1.4
        cursor      pointer

        &::before
        &::after
            content    ''
            position   absolute
            left       0
            top        0
            box-sizing border-box
            width      checkbox-size
            height     checkbox-size

        &::before
            transition box-shadow 350ms cubic-bezier(0, .89, .44, 1)

        &::after
            transition-duration .2s
            transition-property opacity, transform


$form-progress
    progress
        margin        .5em 0
        width         100%
        height        .5em
        color         dodger-blue
        background    grey-10
        border        none
        border-radius em(20px)

        // chrome and safari
        &::-webkit-progress-bar
            background    grey-10
            border-radius em(20px)

        &::-webkit-progress-value
            background    grey-08
            border-radius em(20px)

        // firefox
        &::-moz-progress-bar
            background    grey-08
            border-radius em(20px)
