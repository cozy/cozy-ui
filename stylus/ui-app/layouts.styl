@import '../ui-base/boxes'
@import '../ui-base/z-index'

/*------------------------------------*\
  Layouts
\*------------------------------------*/

$centerized
    position   absolute
    top        50%
    left       50%
    transform  translateX(-50%) translateY(-50%)


$content-center
    display          flex
    align-items      center
    justify-content  center


$fullbleed
    position  fixed
    bottom    0
    top       0
    left      0
    right     0


// NB: Not to be used on it's own. Use one of the others placeholders below (sticky sidebar only yet)
$app-2panes
    box-sizing  border-box
    display     flex
    width       100%
    height      100%

    main
    & > aside
        display         flex
        flex-direction  column

    main,
    main > [role=contentinfo]
        flex        1
        height      auto
        overflow-x  hidden
        overflow-y  auto

// STICKY layout
// When you want the sidebar to act like a sticky footer
$app-2panes-sticky
    @extend $app-2panes

    @media (max-width: (1023/basefont)rem)
        height 'calc(100vh - %s)' % em(102px)
        // Occupy all the available height minus the heights of the Cozy-bar
        // (52px) on top & the navigation (50px) on bottom

        > aside
            position fixed
            left 0
            bottom 0
            width 100%
            z-index $nav-index
